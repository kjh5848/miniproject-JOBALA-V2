{{> layout/header}}

<!--메인페이지-->

<div class="container">

    <div class="mb-5 shadow rounded">
        <img src="/image/joba.png" class="img-fluid">
    </div>
    <!-- VIP 채용관 end -->


    <!-- 채용 공고 start -->
    <div class="my-5" style="margin-top: -50px;">
        <div class="mt-5 mb-3">
            <h3 class="text-left"><b>채용 공고</b></h3>
        </div>
        <div class="row">
            {{#jobopenList}}
                <div class="col-lg-4 col-md-6 col-12">
                    <div onClick="location.href='/comp/jobopen/{{id}}'" class="btn">
                        <div class="card border-0 shadow" style="width: 100%;">
                            <img class="card-img-top img-fluid" src="/image/{{user.imgFilename}}" alt="이미지를 표시할 수 없습니다.">
                            <div class="card-body text-start">
                                <br>
                                <h5 class="card-title">{{jobopenTitle}}</h5>
                                <hr>
                                <p class="card-text">{{compLocation}} {{career}} {{edu}}  </p>
                                <p class="card-text">마감일 : {{endTime}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {{/jobopenList}}
        </div>
    </div>
    <!-- 채용 공고 end -->
</div>
