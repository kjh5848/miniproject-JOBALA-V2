{{> layout/header}}


<!--채용공고 상세페이지-->
<!-- 회사 기본정보 -->

<div class="container d-flex justify-content-center">
    <div style="width: 70%">
        <div class="card mb-3">
            <h1 class="my-4 mx-3">공고</h1>
            <div class="card-body d-flex justify-content-center ">
                <div class="my-5" style="width:70%">
                    <div class="card rounded-2">
                        <img class="card-img-top img-thumbnail" src="/image/{{jobopen.userDTO.imgFilename}}"
                             alt="Card image">
                    </div>
                </div>
            </div>
            <div class="mx-3">
                <p class="card-title">({{jobopen.userDTO.compname}})</p>
                <div class="d-flex flex-row">
                    <div>
                        <h2>{{jobopen.jobopenTitle}}</h2>
                    </div>
                    <div class="mx-2">
                        <form class="" action="/guest/scrap" method="post">
                            {{#jobopen.isGuestScrap}}
                                <input type="hidden" name="jobopenId" value="{{jobopen.id}}">
                                {{#jobopen.isScrap}}
                                    <i id="bookmark" class="fas fa-bookmark text-warning"
                                       style="font-size: 20px;"></i>
                                {{/jobopen.isScrap}}
                                {{^jobopen.isScrap}}
                                    <i id="bookmark" class="far fa-bookmark text-warning"
                                       style="font-size: 20px;"></i>
                                {{/jobopen.isScrap}}
                            {{/jobopen.isGuestScrap}}
                        </form>
                    </div>
                </div>
            </div>
            <!-- 회사 기본정보 -->

            <div class="container">
                <!-- 채용공고 상세보기 -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h3>기본 정보 및 모집분야</h3>
                    </div>
                    <table class="table table-hover">
                        <thead class="table-dark">
                        <td></td>
                        <th colspan="3">기본 정보</th>

                        </thead>
                        <tbody>
                        <tr>
                            <td></td>
                            <th>경력</th>
                            <td>{{jobopen.career}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <th>학력</th>
                            <td>{{jobopen.edu}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <th>고용 형태</th>
                            <td>{{jobopen.jobType}}</td>
                        </tr>
                        <tr>
                            <td></td>

                            <th>연봉</th>
                            <td>{{jobopen.salary}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <th>지역</th>
                            <td>{{jobopen.compLocation}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card mb-3">
                    <div class="card mb-13">
                        <div class=" card-header">
                            <h3>모집 분야</h3>
                        </div>
                        <table class="table table-hover">
                            <thead class="table-dark">
                            <td></td>
                            <th colspan="3">기본 정보</th>

                            </thead>
                            <tbody>
                            <tr>
                                <td></td>
                                <th>직무</th>
                                <td>{{jobopen.hopeJob}}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <th>인원</th>
                                <td>0명</td>
                            </tr>
                            <tr>
                                <td></td>
                                <th>요구스킬</th>
                                <td>{{jobopen.skills}}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


                <!-- 회사 공고 이미지 -->

                <!-- 지원하기 버튼 -->
                {{#jobopen.isGuestScrap}}
                    <div class="d-flex justify-content-center mt-5 mb-5" style="width:100%; font-size: 50px;">
                        <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="modal"
                                data-bs-target="#applyModal">
                            입사지원하기
                        </button>
                    </div>
                {{/jobopen.isGuestScrap}}
                <!-- 지원하기 버튼 -->

                <!-- 입사지원 클릭시 창띄우기 -->
                <form id="applicationForm" action="/Applys" method="post" enctype="application/x-www-form-urlencoded">
                    <input type="hidden" name="jobopenId" value="{{jobopen.id}}">
                    <div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="applyModalLabel">이력서 목록</h5>x
                                </div>
                                <div class="modal-body">
                                    {{#jobopen.applyResumeList}}
                                        <div class="card row mt-3 shadow-lg p-3 bg-body rounded-5">
                                            <div class="card-body shadow-5">
                                                <div class="col-md-8 align-items-center">
                                                    {{resumeTitle}}
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <div class="mt-3">
                                                        <p style="font-size: 15px;">{{career}} / {{edu}} </p>
                                                    </div>
                                                    <div>
                                                        <input type="radio" name="resumeId" value="{{id}}">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {{/jobopen.applyResumeList}}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                                            aria-label="Close">
                                        닫기
                                    </button>
                                    <button type="submit" class="btn btn-primary">지원하기</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- 입사지원 클릭시 창띄우기 -->

                <!-- 이력서 접수 방법 -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title">접수 방법</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item"><b>온라인 접수</b>: 회사 홈페이지 접속 후 지원</li>
                            <li class="list-group-item"><b>이메일 접수</b> : resume@company.com 으로 이력서 첨부</li>
                            <li class="list-group-item"><b>방문 접수</b>: 회사 본사 방문 후 접수</li>
                        </ul>
                    </div>
                </div>
                <!--     이력서 접수 방법 -->
            </div>
        </div>
    </div>
</div>


<script>
    $("#bookmark").click(function () {
        $(this).closest("form").submit(); // submit 이벤트 발생
    });
</script>


{{> layout/footer}}