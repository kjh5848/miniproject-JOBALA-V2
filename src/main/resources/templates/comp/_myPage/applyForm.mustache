<style>
    .text-left {
        text-align: left;
    }

    .profileBox {
        margin-top: 50px;
        border: 2px solid #ccc;
        padding: 30px;
        border-radius: 10px;
        border: none;
    }
</style>

<div class="container">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="upMenu text-center mb-4">
                    <h1>마이페이지</h1>
                    <div class="btn-group btn-group-lg">
                        <a href="/comp/profileForm">
                            <button type="button" class="btn btn-outline-dark m-1">프로필 관리</button>
                        </a>
                        <a href="/comp/mngForm">
                            <button type="button" class="btn btn-outline-dark m-1">채용공고 관리</button>
                        </a>
                        <a href="/applyForm">
                            <button type="button" class="btn btn-outline-dark m-1">지원자 관리</button>
                        </a>
                        <a href="/positionForm">
                            <button type="button" class="btn btn-outline-dark m-1">제안 관리</button>
                        </a>
                        <a href="/comp/scrapForm">
                            <button type="button" class="btn btn-outline-dark m-1">스크랩</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div id="applicantsList" style="margin-top: -50px;">
            <h2 class="profileBox text-left mt-5 d-flex align-items-stretch" style="margin-bottom:0px;">내 공고 지원자 목록<span class="badge bg-info" id="applyCount"></span></h2>
            {{#CompApply}}
            <div class="card shadow p-3 mb-3 bg-body rounded"
                 style="position: relative; margin-top: -10px; margin-left:20px; width: 80%;">

                <p onClick="location.href='/comp/mngForm'" style="cursor:pointer">
                    <button class="btn btn-primary btn-sm">공고</button>  {{jobopenTitle}}</p>
                <h3 onClick="location.href='/guest/resume/{{resumeId}}'" style="cursor:pointer">{{resumeTitle}}</h3>
                <p>{{name}}     {{state}}</p>
                <p><small>{{edu}}</small><br><small>{{endTime}}</small></p>

                    <div class="button-container d-flex flex-column justify-content-center align-items-end position-absolute top-50 end-0 translate-middle-y mt-3">

                        <!--             합격                    -->
                        <form action="/comp/applyStatus/update" method="post">
                            <input type="hidden" name="status" value="합격">
                            <input type="hidden" name="applyId" value="{{id}}">
                            <button type="submit" class="btn btn-info m-2 mb-0" style="width: 70px; height: 40px;">합격
                            </button>
                        </form>

                        <!--             불합격                    -->
                        <form action="/comp/applyStatus/update" method="post"
                              enctype="application/x-www-form-urlencoded">
                            <input type="hidden" name="status" value="불합격">
                            <input type="hidden" name="applyId" value="{{id}}">
                            <button type="submit" class="btn btn-secondary m-2" style="width: 70px; height: 40px;">불합격
                            </button>
                        </form>
                    </div>

            </div>
            {{/CompApply}}
        </div>
    </div>

