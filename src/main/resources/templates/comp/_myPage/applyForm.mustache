{{> layout/header}}

<style>
    .profileBox {
        margin-top: 50px;
        border: 2px solid #ccc;
        padding: 30px;
        border-radius: 10px;
        border: none;
    }
</style>

<div class="container">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="upMenu text-center mb-4">
                    <h1>마이페이지</h1>
                    <div class="btn-group btn-group-lg">
                        <a href="/comp/profileForm">
                            <button type="button" class="btn btn-outline-dark m-1">프로필 관리</button>
                        </a>
                        <a href="/comp/mngForm">
                            <button type="button" class="btn btn-outline-dark m-1">채용공고 관리</button>
                        </a>
                        <a href="/applyForm">
                            <button type="button" class="btn btn-outline-dark m-1">지원자 관리</button>
                        </a>
                        <a href="/positionForm">
                            <button type="button" class="btn btn-outline-dark m-1">제안 관리</button>
                        </a>
                        <a href="/comp/scrapForm">
                            <button type="button" class="btn btn-outline-dark m-1">스크랩</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card border-0 " style="width: 70%;">
            <h2 class="profileBox mb-2 mt-4">내 공고 지원자 목록</h2>
            {{#CompApply}}
                <div class="card form-control d-flex justify-content-between mb-4 shadow-lg p-3 mb-5 bg-body rounded-5">
                    <div class="d-flex justify-content-between">
                        <h3 onClick="location.href='/comp/jobopen/{{jobopenId}}'" style="cursor:pointer">
                            <button class="btn btn-primary btn-sm">공고</button> {{jobopenTitle}}</h3>
                        <p>마감일 : {{endTime}}</p>
                    </div>

                    <p onClick="location.href='/guest/resume/{{resumeId}}'" style="cursor:pointer">
                        <button class="btn btn-primary btn-sm">이력서</button> {{resumeTitle}}</p>
                    <div class="d-flex flex-row">
                        <div >이름 : {{name}}</div>
                        <div class="mx-3">학력 : {{edu}}</div>
                        <div>경력 : {{career}}</div>
                    </div>
                    <div>결과 : <span style="color: #0d6efd">{{state}}</span></div>

                    <div class="d-flex justify-content-center">
                        <div>
                            <!--             합격                    -->
                            <form action="/comp/applyStatus/update" method="post">
                                <input type="hidden" name="status" value="합격">
                                <input type="hidden" name="applyId" value="{{id}}">
                                <button type="submit" class="btn btn-info m-2 mb-0" style="width: 70px; height: 40px;">
                                    합격
                                </button>
                            </form>
                        </div>
                        <div>
                            <!--             불합격                    -->
                            <form action="/comp/applyStatus/update" method="post"
                                  enctype="application/x-www-form-urlencoded">
                                <input type="hidden" name="status" value="불합격">
                                <input type="hidden" name="applyId" value="{{id}}">
                                <button type="submit" class="btn btn-secondary m-2" style="width: 70px; height: 40px;">
                                    불합격
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/CompApply}}
        </div>
    </div>

